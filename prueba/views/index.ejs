<%- include("head") %>
<!-- Incluye el contenido del archivo "head.ejs" -->

<body>

  <div class="p-3 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid py-5 text-center">
      <h1 class="display-5 fw-bold"><%= title %></h1>
      <!-- Muestra el título principal del contenido -->
      <p class="fs-4 my-4"><%= message %></p>
      <!-- Muestra un mensaje de texto relacionado con el contenido -->
      <a href="/productos">
        <!-- Crea un enlace hacia la ruta "/productos" -->
        <button class="btn btn-dark btn-lg mt-3 px-5" type="button">
          Productos
        </button>
      </a>
    </div>
  </div>
  <div class="h-75 d-flex flex-column justify-content-center">
    <div class="container pt-5 text-center">
      <h1>Lista de Productos</h1>
      <!-- Título de la lista de productos -->
    </div>
    <div class="container my-5 p-3 w-50 border border-5 rounded-3">
      <table class="table table-dark table-striped table-hover mb-0">
        <thead>
          <tr class="border">
            <th class="py-4 text-center border">Nombre</th>
            <!-- Encabezado de la columna "Nombre" -->
            <th class="py-4 text-center">Precio</th>
            <!-- Encabezado de la columna "Precio" -->
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < listaFrutas.length; i++) { %>
          <!-- Bucle que recorre los productos -->
          <tr>
            <td class="py-3 text-center border-end"><%= listaFrutas[i].nombre %></td>
            <!-- Celda con el nombre del producto -->
            <td class="py-3 text-center"><%= listaFrutas[i].importe %></td>
            <!-- Celda con el precio del producto -->
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include("footer") %>
  <!-- Incluye el contenido del archivo "footer.ejs" -->
</body>
